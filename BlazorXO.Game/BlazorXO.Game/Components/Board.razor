@page "/board"
@using  BlazorXO.Game.Components;

<h1>Board</h1>

<div class="container">
    @for (int i = 0; i < 3; i++)
    {
        <div class="row" style="height: 50px;">
            @for (int j = 0; j < 3; j++)
            {
                <div class="col-sm">
                    <XO width="100%" height="100%" PositionX="@i" PositionY="@j" />
                </div>
            }
        </div>
    }
</div>

<p>Current count: @currentCount</p>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
